{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "types": ["react-native", "node"],
    /* Completeness */
    "skipLibCheck": true,                                 /* Skip type checking all .d.ts files. */

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "exclude": ["node_modules", "build", "dist"]
}
